<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">


        <!-- Top Menu -->
        <LinearLayout
            android:background="@color/mainBgColor"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="35dp">

            <Button
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:id="@+id/btn_back"
                android:background="@drawable/sub_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:textSize="23dp"
                android:text="글쓰기"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- layout_new_write_inner -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="6dp"
            android:id="@+id/layout_new_write_inner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:background="@null"
                android:gravity="top"
                android:hint="이 곳에 작성해 주세요"
                android:layout_width="fill_parent"
                android:layout_height="200dp" />

            <!-- Append image -->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_append_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></LinearLayout>

            <View
                android:background="@color/silver"
                android:layout_width="fill_parent"
                android:layout_height="1dp"/>

            <!-- Append Tag -->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_append_tag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/innerTagColor"
                    android:id="@+id/tv_help_tag"
                    android:text="'#태그'를 입력해주세요."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/silver"
                android:layout_width="fill_parent"
                android:layout_height="1dp"/>

            <!-- add path -->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_add_path"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></LinearLayout>

            <!-- append maps -->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_append_maps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></LinearLayout>


            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- Tag input -->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_rectangle_shape_silver"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text=" # "
                            android:textSize="30dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:textSize="30dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        </LinearLayout>

                    <Button
                        android:layout_gravity="center"
                        android:text="+"
                        android:background="@color/mainBgColor"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:padding="5dp"
                        android:drawableLeft="@drawable/write_01"
                        android:text="사진"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_round_shape_silver"
                        android:id="@+id/btn_picture"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:padding="5dp"
                        android:drawableLeft="@drawable/write_02"
                        android:text="카메라"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_round_shape_silver"
                        android:id="@+id/btn_camera"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:padding="5dp"
                        android:drawableLeft="@drawable/write_03"
                        android:text="코스"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_round_shape_silver"
                        android:id="@+id/btn_path"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:padding="5dp"
                        android:drawableLeft="@drawable/write_04"
                        android:text="지도"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_round_shape_silver"
                        android:id="@+id/btn_map"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    </LinearLayout>

                <!-- Add Button -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@drawable/bg_round_shape_subbgcolor2"
                        android:id="@+id/btn_new_write_save"
                        android:textColor="@color/white"
                        android:text="완    료"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
